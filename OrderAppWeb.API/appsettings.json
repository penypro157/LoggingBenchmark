{
  "ConnectionStrings": {
    "SQLServer": "Data Source=localhost\\MSSQLSERVER01;Initial Catalog=Logging;Integrated Security=True;Trust Server Certificate=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=localhost\\MSSQLSERVER01;Initial Catalog=Logging;Integrated Security=True;Trust Server Certificate=True",
          "tableName": "Logs",
          "schemaName": "dbo",
          "autoCreateSqlTable": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "Your ASP.NET Core App"
    }
  },
  "AllowedHosts": "*"

}
